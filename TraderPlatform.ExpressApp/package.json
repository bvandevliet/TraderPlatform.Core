{
  "name": "trader-platform.express-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "copy-public": "xcopy .\\src\\public\\ .\\dist\\public\\ /s /e /y",
    "copy-views": "xcopy .\\src\\views\\ .\\dist\\views\\ /s /e /y",
    "copy-assets": "npm run copy-public && npm run copy-views",
    "docker-build": "tsc --build",
    "build": "tsc --build && npm run copy-assets",
    "clean": "tsc --build --clean && npm run copy-assets",
    "start": "node ./dist/app.js"
  },
  "description": "TraderPlatform.ExpressApp",
  "author": {
    "name": "Bob Vandevliet"
  },
  "main": "./dist/app.js",
  "dependencies": {
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "pug": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/express": "^4.0.37",
    "@types/express-serve-static-core": "^4.0.50",
    "@types/mime": "^1.3.1",
    "@types/node": "^14.14.7",
    "@types/serve-static": "^1.7.32",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-plugin-import": "^2.26.0",
    "typescript": "^4.8.4"
  }
}